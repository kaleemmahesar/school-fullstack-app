RewriteEngine On

# Allow direct access to uploads directory
RewriteRule ^uploads/(.*)$ uploads/$1 [L]

# Handle preflight requests first - let PHP handle OPTIONS requests
RewriteCond %{REQUEST_METHOD} OPTIONS
RewriteRule ^(.*)$ api.php [L]

# Redirect requests to api.php with endpoint parameter
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^api/([^/]*)/?$ api.php?endpoint=$1 [QSA,L]

RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^api/([^/]*)/([^/]*)/?$ api.php?endpoint=$1&id=$2 [QSA,L]